<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".MainActivity"
    >

    <EditText
        android:id="@+id/edt_Weight"
        android:maxLength="6"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add your weight"
        android:textColorHint="@color/Button_calculate"
        />


    <EditText
        android:id="@+id/edt_Height"
        android:maxLength="6"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_Weight"
        android:hint="Add your Height"
        android:textColorHint="@color/Button_calculate" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Calculate"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/Button_calculate"
        android:textStyle="bold"
        android:text="Calculate" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/edt_Height"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="120dp"
        android:src="@drawable/diet_amico" />


</RelativeLayout>